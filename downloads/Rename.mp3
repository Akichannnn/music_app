import os

def remove_spaces_in_filenames(directory):
    """
    Remove spaces from filenames in the given directory.
    
    :param directory: Path to the directory containing files
    """
    try:
        for filename in os.listdir(directory):
            # Construct full file path
            old_path = os.path.join(directory, filename)
            
            # Check if it's a file
            if os.path.isfile(old_path):
                # Replace spaces in the filename
                new_filename = filename.replace(" ", "")
                new_path = os.path.join(directory, new_filename)
                
                # Rename the file if the name has changed
                if old_path != new_path:
                    os.rename(old_path, new_path)
                    print(f"Renamed: '{filename}' -> '{new_filename}'")
    except Exception as e:
        print(f"Error: {e}")

# Example usage
directory_path = input("Enter the directory path: ")
remove_spaces_in_filenames(directory_path)